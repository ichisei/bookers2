<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= link_to user.book.title, book_path(book.id) %></td>
      <td><%= user.book.body %></td>
    </tr>
    <% end %>
  </tbody>
 </table>