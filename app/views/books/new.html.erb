<h1>User info</h1>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
  </div>
  <table>
    <tbody>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th>未入力</th>
     </tr>
    </tbody>
  </table>

  <p><%= link_to "マーク", edit_user_path(@user.id) %></p>





<h1>New book</h1>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
