<div class="container">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-5">
      <h2>Editing Book</h2>
      <%= form_with model: @book, url: book_path(@book.id), method: :PATCH do |f| %>
      <div class="form-group">
        <lavel>Title</lavel>
          <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <Lavel>Opinion</lavel>
        <%= f.text_area :body, class: "form-control" %>
       </div>
